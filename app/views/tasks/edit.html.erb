<div class="container">
  <h1>Edit Task</h1>
<%= form_with(model: [@post, @task], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Task Name' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content, 'Task Content' %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :image, 'Task Image' %>
      <%= form.file_field :image, class: 'form-control-file' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Update Task', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', post_tasks_path(@post), class: 'btn btn-secondary' %>
</div>
