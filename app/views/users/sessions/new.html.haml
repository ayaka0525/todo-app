.container
  %h2.text-center.mb-4 Log in
  .row.justify-content-center
    .col-md-6
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f|
        .form-group.mb-3
          = f.label :email, class: 'form-label'
          = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email"
        .form-group.mb-3
          = f.label :password, class: 'form-label'
          = f.password_field :password, class: 'form-control', autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .form-group.form-check.mb-3
            = f.check_box :remember_me, class: 'form-check-input'
            = f.label :remember_me, class: 'form-check-label'
        .actions.text-center
          = f.submit "Log in", class: 'btn btn-primary'
      = render "users/shared/links"
